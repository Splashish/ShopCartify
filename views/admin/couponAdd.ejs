    <!-- Coupon Form -->
  
    <div class="content" class="element" style="display: flex;" >
      <div class="card" style=" background-color:  rgb(217, 217, 217);">
        <h1 class="mb-4">Add Coupon</h1>
        <form action="/admin/couponmanagePost" method="POST">
        <div class="form-row"><!--below is trim validation modale-->
          <!-- Modal -->
<div class="modal fade" id="validationModal" tabindex="-1" role="dialog" aria-labelledby="validationModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="validationModalLabel">Validation Error</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please enter valid values in all fields.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>


          <div class="form-group col-md-6">
            <label for="couponCode">Coupon Code:</label>
            <input type="text" id="couponCode" name="couponCode" class="form-control" placeholder="Enter coupon code"  />
            <!-- <small id="couponCodeHelp" class="form-text text-muted">Please enter a valid coupon code.</small> -->

            <!-- Error message moved inside a span element -->
            <% if(error){%>
              <span style="color: red;"><%= error %></span>
              <%}%>

          </div>
          <div class="form-group col-md-6">
            <label for="expiryDate">Expiry Date:</label>
            <input type="date" id="expiryDate" name="expiryDate" class="form-control"  />
            <!-- <small id="expiryDateHelp" class="form-text text-muted">Please enter a valid date.</small> -->
            <% if(message){%>
              <span style="color: red;"><%= message %></span>
              <%}%>
          </div>
        </div>

        <div class="form-row">
          <div class="form-group col-md-6">
            <label for="productDiscount">Product Discount:</label>
            <div class="input-group">
              <input type="number" id="productDiscount" name="productDiscount" step="0.01" class="form-control" placeholder="Enter discount amount"  />
              <div class="input-group-append">
                <span class="input-group-text">%</span>
              </div>
            </div>
            <% if(discounterror){%>
              <span style="color: red;"><%= discounterror %></span>
              <%}%>
            <!-- <small id="productDiscountHelp" class="form-text text-muted">Please enter a valid discount percentage.</small> -->
            
          </div>

          <div class="form-group col-md-6">
            <label for="minimumPurchaseValue">Minimum Purchase Value:</label>
            <div class="input-group">
              <input type="number" id="minimumPurchaseValue" name="minimumPurchaseValue" step="0.01" class="form-control" placeholder="Enter minimum purchase value"  />
              <div class="input-group-append">
                <span class="input-group-text">â‚¹</span>
              </div>
            </div>
            <% if(minimumPurchaseValueError){%>
              <span style="color: rgb(255, 0, 60);text-decoration:solid;"><%= minimumPurchaseValueError %></span>
              <%}%>
            <!-- <small id="minimumPurchaseValueHelp" class="form-text text-muted">Please enter a valid minimum purchase value.</small> -->
          </div> 

        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>

    <!-- Footer -->
    


    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const form = document.querySelector('form');
        const validationModal = new bootstrap.Modal(document.getElementById('validationModal'));
    
        form.addEventListener('submit', function (event) {
          const couponCode = document.getElementById('couponCode').value.trim();
          const expiryDate = document.getElementById('expiryDate').value.trim();
          const productDiscount = document.getElementById('productDiscount').value.trim();
          const minimumPurchaseValue = document.getElementById('minimumPurchaseValue').value.trim();
    
          if (couponCode === '' || expiryDate === '' || productDiscount === '' || minimumPurchaseValue === '') {
            event.preventDefault(); // Prevent form submission
            validationModal.show(); // Show the validation modal
          }
        });
      });
    </script>
    
