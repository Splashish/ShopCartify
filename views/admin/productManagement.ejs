    <div class="container mt-5">
      <div class="row tm-content-row">
        <div class="col-sm-12 col-md-12 col-lg-8 col-xl-8 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-products">
            <div class="tm-product-table-container">
              <table class="table table-hover tm-table-small tm-product-table bg-light">
                <thead>
                  <tr>
                    <th scope="col"></th>
                    <th scope="col">Product Name</th>
                    <th scope="col">Category</th>
                    <th scope="col">Price</th>
                    <th scope="col">Stock</th>
                    <th scope="col">Action</th>
                 </tr>
                </thead>
                <tbody>
                  <% fullProducts.forEach(product => { %>
                  <tr>
                    <th scope="row"><input type="checkbox" /></th>
                    <td class="tm-product-name"><%= product.name %></td>
                    <td><%= product.category %></td>
                    <td><%= product.price %></td>
                    <td><%= product.stock%></td>
                    <td>
                      <form action="/admin/deleteproduct/<%= product.id %>" method="post" class="tm-product-delete-form">
                        <!-- Add any necessary hidden input fields for identifying the item to delete -->
                        <button type="submit" class="tm-product-delete-link">
                          <i class="far fa-trash-alt tm-product-delete-icon"></i>
                        </button>
                      </form>
                    </td>
                    
                    <td>
                      <form action="/admin/editproduct/<%= product.id %>" method="get" class="tm-product-edit-form">
                        <!-- Add any necessary hidden input fields for identifying the item to edit -->
                        <button type="submit" class="tm-product-edit-link">
                          <i class="far fa-edit tm-product-edit-icon"></i>
                        </button>
                      </form>
                    </td>
                    
                    <% }) %>
                  </tr>
                </tbody>
              </table>
            </div>
            <!-- table container -->
            <a
            href="productmanage"
              class="btn btn-primary btn-block text-uppercase mb-3">Add new product</a>
            
          </div>
        </div>
        

        <div class="col-sm-12 col-md-12 col-lg-4 col-xl-4 tm-block-col">
          <div class="tm-bg-primary-dark tm-block tm-block-product-categories">
            <h2 class="tm-block-title">Product Categories</h2>
            <div class="tm-product-table-container">
              <table class="table tm-table-small tm-product-table bg-light">
                <tbody>

                  <% categories.forEach((category, index) => { %>
                    <tr>
                      <td>
                        <form action="/admin/categoryManagementdelete/<%= category.id %>" method="post" class="tm-product-delete-form">
                          <!-- Add any necessary hidden input fields for identifying the item to delete -->
                          <button type="submit" class="tm-product-delete-link">
                            <i class="far fa-trash-alt tm-product-delete-icon"></i>
                          </button>
                        </form>
                      </td>
                      <td>
                        <!-- Display category name -->
                        <%= category.categoryName %>
                      </td>
                      <td>
                        <!-- Edit form with hidden input for category id -->
                        <form  action="/admin/categoryeditpage/<%= category._id %>" method="post" class="tm-product-edit-form">
                          <button type="submit" class="tm-product-edit-link">
                            <i class="fas fa-edit tm-product-edit-icon"></i>
                          </button>
                        </form>
                      </td>
                      <% }) %>
                    </tr>
                  
                
                </tbody>
              </table>
            </div>
            <!-- table container -->
            <button class="btn btn-primary btn-block text-uppercase mb-3">
              <a  href="categoryadd">  Add new category</a>
            
            </div> 
          </button>
        
        </div>

      </div>
