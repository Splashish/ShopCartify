<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product</title>
  <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-900 text-white">

  <div class="container mx-auto my-8 p-4 bg-gray-800 rounded-md shadow-md max-w-md">
    <h2 class="text-2xl font-semibold mb-4">Add Product</h2>

    <form class="mx-auto space-y-4" action="/admin/productmanagePost" method="post" enctype="multipart/form-data">
      <!-- Image Upload -->
      <div>
        <label for="productImage" class="block text-sm font-medium text-gray-300">Product Image:</label>
        <input type="file" id="productImage" name="Images" class="mt-1 p-2 w-full border rounded-md bg-gray-700" accept=".jpg, .jpeg, .png, .gif, .webp" multiple >
      </div>
      
      
      <!-- Product Name -->
      <div>
        <label for="productName" class="block text-sm font-medium text-gray-300">Product Name:</label>
        <input type="text" id="productName" name="name" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required>
      </div>

      <!-- Price and Currency -->
      <div class="flex space-x-4">
        <div class="w-1/2">
          <label for="productPrice" class="block text-sm font-medium text-gray-300">Product Price:</label>
          <input type="number" id="productPrice" name="price" step="0.01" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required>
        </div>
        <div class="w-1/2">
          <label for="currency" class="block text-sm font-medium text-gray-300">Currency:</label>
          <select id="currency" name="currency" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required>
            <option value="usd">USD</option>
            <option value="eur">EUR</option>
            <option value="inr">INR</option>
          </select>
        </div>
      </div>

      <!-- Category, Stock, Description -->
      <div>
        <label for="category" class="block text-sm font-medium text-gray-300">Category:</label>
        <select id="category" name="category" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required>
          <option value="gadgets">Gadgets</option>
          <option value="clothing">Clothing</option>
          <option value="sneakers">Sneakers</option>
        </select>
      </div>

      <div>
        <label for="stock" class="block text-sm font-medium text-gray-300">Stock:</label>
        <input type="number" id="stock" name="stock" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required>
      </div>

      <div>
        <label for="description" class="block text-sm font-medium text-gray-300">Description:</label>
        <textarea id="description" name="description" class="mt-1 p-2 w-full border rounded-md bg-gray-700" required></textarea>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="bg-blue-500 text-white p-2 rounded-md hover:bg-blue-700 focus:outline-none focus:ring focus:border-blue-300">
        Add Product
      </button>
    </form>
  </div>
  <%-include("../partials/adminnavigation.ejs")-%>

  <script>
    function redirectToDashboard() {
      window.location.href = '/admin/dashboard';
    }
  </script>
</body>
</html>
