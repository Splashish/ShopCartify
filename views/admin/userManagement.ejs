      <div class="container mt-5">
        <div class="row tm-content-row">
          <div class="col-12 tm-block-col">
            <div class="tm-block tm-block-h-auto" style="background-color: rgb(217, 217, 217);>
              <h2 class="tm-block-title">List of Accounts</h2>
              <p class="text-white">Accounts</p>
              
            </div>
          </div>
        </div>
    
        <!-- User Display Box -->
        <div class="row tm-content-row">
          <div class="col-12 tm-block-col">
            <div class=" tm-block tm-block-h-auto" style="background-color: rgb(217, 217, 217);">
              <h2 class="tm-block-title">User Display Box</h2>
    
              <!-- Default User Box Template -->
              <table class="table table-bordered bg-light">
                <thead>
                  <tr>
                    <th></th>
                    <th>Name </th>
                    <th>Email</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach((user, index) => { %>
                      <tr>
                          <th scope="row"><%= index + 1 %></th>
                          <td><%= user.name %></td>
                          <td><%= user.email %></td>
                          <td>
                              <% if (user.isblocked) { %>
                                  <form method="post" action="/admin/unblock/<%= user._id %>">
                                      <button type="submit" class="btn btn-dark btn-block">Unblock</button>
                                  </form>
                              <% } else { %>
                                  <form method="post" action="/admin/block/<%= user._id %>">
                                      <button type="submit" class="btn btn-warning btn-block">Block</button>
                                  </form>
                              <% } %>
                          </td>
                      </tr>
                  <% }) %>
              </tbody>
              </table>

<!-- Pagination -->
<div class="pagination">
  <nav aria-label="Page navigation example">
     <ul class="pagination justify-content-center">
       <% if (currentPage > 1) { %>
         <li class="page-item">
           <a class="page-link" href="/admin/usermanage?page=<%= currentPage - 1 %>" aria-label="Previous">
             <span aria-hidden="true">&laquo;</span>
           </a>
         </li>
       <% } %>
 
       <% for (let i = 1; i < currentPage; i++) { %>
         <li class="page-item <%= i === currentPage ? 'active' : '' %>">
           <a class="page-link" href="/admin/usermanage?page=<%= i %>"><%= i %></a>
         </li>
       <% } %>
 
       <% if (currentPage < users.length) { %>
         <li class="page-item">
           <a class="page-link" href="/admin/usermanage?page=<%= currentPage + 1 %>" aria-label="Next">
             <span aria-hidden="true">&raquo;</span>
           </a>
         </li>
       <% } %>
     </ul>
  </nav>
 </div>
 
            </div>
          </div>
        </div>
