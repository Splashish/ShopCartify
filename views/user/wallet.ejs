<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Wallet</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .wallet-container {
            max-width: 600px;
            margin: 20px auto;
            background-color: #fff;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .header {
            background-color: #ffd700;
            color: #333;
            padding: 20px;
            text-align: center;
            border-bottom: 2px solid #ddd;
        }

        .balance {
            padding: 20px;
            text-align: center;
        }

        .btn-back {
            display: block;
            margin: 20px auto;
            text-align: center;
        }

        /* SweetAlert styles (Include SweetAlert library) */
        .swal-title {
            color: #333;
        }

        .swal-text {
            color: #666;
        }

        .swal-button {
            background-color: #ffd700;
            color: #333;
        }
    </style>
</head>
<body>
    <div class="wallet-container">
        <div class="header">
            <h2>Your Wallet Balance</h2>
        </div>
        <div class="balance">
            <button  class=" btn btn-secondary"  onclick="showWalletBalance()">Show Wallet Balance</button>
        </div>
        <a href="/profile" class="btn-back">Back to Profile</a>
    </div>

    <!-- SweetAlert library (Include this in your project) -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        function showWalletBalance() {
            Swal.fire({
                title: 'Wallet Balance',
                text: 'Your current balance is â‚¹<%= total %>/-',
                icon: 'info',
                confirmButtonColor: '#ffd700'
            });
        }
    </script>
</body>
</html>
