              </tr>
            </thead>
            <!-- Table body -->
            <tbody>
              <% cartDocument.forEach((cart) => { %>
              <tr>
                <!-- Quantity -->
                <td>
                  <div class="product-info">
                    <!-- Assuming 'cart.productId.image' contains the image source -->
                    <div class="product-image-container">
                      <img src="<%= cart.images[0]?.slice(6) %>" alt="Product Image" class="product-image">
                    </div>
                  </div>
                </td>
                <td>
                  <div class="quantity-container">
                    <a href="javascript:void(0);" onclick="decreaseQuantity('<%= cart.productId._id %>')">
                      <i class="fas fa-minus"></i>
                    </a>
                    <div class="quantity" data-product-id="<%= cart.productId._id %>" style="margin-right: 300px;">
                      <%= cart.quantity %>
                    </div>
                    <a href="javascript:void(0);" onclick="increaseQuantity('<%= cart.productId._id %>')">
                      <i class="fas fa-plus"></i>
                    </a>
                  </div>
                </td>

                <td>
                  <div class="product-info">
                    <!-- Product Image -->
                    <!-- <div class="product-image-container">
                      <img src="<%= cart._id.images?.slice(6) %>" alt="Product Image" class="product-image">
                    </div> -->

                    <!-- Product Name -->
                    <div class="product-details">
                      <h6 class="product-name"><%= cart.productId.name %></h6>
                    </div>
                  </div>
                </td>

                <!-- Total -->
                <td>
                  <div class="product-total">
                    <h6 class="total" data-product-id="<%= cart.productId._id %>">
                      ₹<%= (cart.quantity * cart.price).toFixed(2) %>
                    </h6>
                  </div>
                </td>

                <!-- Remove button -->
                <td>
                  <div class="remove-button">
                    <form action="/removeitems/<%= cart.productId._id %>" method="post">
                      <input type="hidden" name="cartId" value="<%= cart._id %>">
                      <button type="submit" class="btn btn-danger" data-id="">Remove</button>
                    </form>
                  </div>
                </td>

              </tr>
              <% }) %>
            </tbody>
          </table>
          <% } else { %>
          <p>No items in cart</p>
          <% } %>
        </div>
      </div>
    </div>

    <!-- Total Price -->
    <div class="container">
      <div class="row">
        <div class="col-lg-4 offset-lg-4">
          <h5>Total Amount:₹ <span id="total-price">
            <% let totalPrice = 0; %>
            <% for (let i = 0; i < cartDocument.length; i++) { %>
            <% const itemPrice = parseFloat(cartDocument[i].price); %>
            <% const itemQuantity = parseInt(cartDocument[i].quantity); %>
            <% if (!isNaN(itemPrice) && !isNaN(itemQuantity)) { %>
            <% totalPrice += itemQuantity * itemPrice; %>
            <% } %>
            <% } %>
            <%= totalPrice.toFixed(2) %>
          </span></h5>
     
